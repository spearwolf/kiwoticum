!!! 5
%html
  %head
    = meta_tag "yes", :name => "apple-mobile-web-app-capable"
    = meta_tag "black", :name => "apple-mobile-web-app-status-bar-style"
    = meta_tag "width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"
    %link(rel="apple-touch-icon" href="apple-touch-icon.png")

    = stylesheet_link_tag "site.css"

    = javascript_include_tag "jquery-1.6.1.min.js", "raphael-min.js", "underscore-min.js", "iscroll-min.js", "perlin-noise-simplex.js"
    = javascript_include_tag "spw.country_algorithms.js", "kiwoticum-min.js"

    = yield_content :head

  %body{ :class => page_classes }
    = yield
