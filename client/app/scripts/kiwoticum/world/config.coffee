papa.Mixin "kiwoticum.world.config", -> (world) ->

    world.regionPaddingX = 20
    world.regionPaddingY = 20

    world.regionShapeStroke = no
    world.regionShapeStrokeStyle = "rgba(0,0,0,0.5)"

    world.regionPixelZoom = no                      # use "no" to disable
    world.regionFullPathVectorPixelator = 4         # use "no" to disable
    world.regionPathSmoothing = 1.3                 # use "no" to disable

    world.regionShapeFillStyle = "#f0f0f0"

    world.regionCenterStrokeStyle = "#800030"
    world.regionCenterLineWidth = 2


